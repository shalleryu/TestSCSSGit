// Sass configuration
{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "test4 watch",
            "type": "shell",
            "command": "gulp test4-watch",
            "problemMatcher": [
                "$node-sass"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "test view",
            "type": "shell",
            "command": "explorer",
            "windows": {
                "command": "explorer.exe"
            },
            "args": [
                "${file}"
            ],
            "problemMatcher": [
                "$msCompile"
            ]
        },
        {
            "label": "compass run",
            "type": "shell",
            "command": "compass watch test5",
            "windows": {
                "command": "compass watch test5"
            },
        },
        {
            "label": "server run",
            "type": "shell",
            "command": "http-server test5",
            "windows": {
                "command": "http-server test5"
            },
        }
    ],
